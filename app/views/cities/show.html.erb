<h1 class="show_city_title"><a href="/cities"><%=@city.city_name%></a></h1>
  <img src="<%=@city.photo%>" class="main_city_photo">

<div class="btns">
<%= link_to "All Cities", cities_path, class:"btn btn-primary"%>

  <!-- Button trigger modal -->
<button type="button" class="btn create btn-primary" data-toggle="modal" data-target="#exampleModal">
  Create a New Post
</button>
</div>
<!-- Modal -->
<%= form_for ([@city, @post]) do |f|%>
<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">New Post</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <div>
          <%= f.text_field :review_title, placeholder: "Review Title" %>
        </div>
        <div>
          <%= f.text_area :review, placeholder: "Write your review..." %>
        </div>
      </div>
      <div class="modal-footer">
        <%= f.submit "Submit", class:"btn btn-secondary"%>
      </div>
    </div>
  </div>
</div>
 <% end %>

  <h2 class="all_posts">All Posts:</h2>
   <div class="album mt-4 avatar-home">
     <div class="container">
       <div class="row">
          <% @reviews.reverse.each do |post| %>
            <div class="col-md-4">
                <div class="card mb-5">
                  <div class="card-body">
                    <h5><%=link_to post.review_title, user_post_path(@user.id, post.id), class:"card-title" %></h5>
                    <p class="card-text"><%=post.review%></p>
                    <p>Posted by: <%=User.find_by_id(post.user_id).first_name%> <%=User.find_by_id(post.user_id).last_name%></p>
                  </div>
                </div>
              </div>
          <% end %>
        </div>
     </div>
  </div>
